---
import Error404Layout from "@layouts/Error404Layout.astro";
import Emoji from "astro-emoji";
import * as m from "../paraglide/messages.js";
import { languageTag } from "../paraglide/runtime";
---

<Error404Layout title="404" description="404">
  <section id="404-section" class="prose flex flex-col items-center p-6">
    <h1 class="text-red-600">404</h1>
    <label class="swap swap-flip text-9xl" for="404-emoji-swap">
      <!-- this hidden checkbox controls the state -->
      <input type="checkbox" id="404-emoji-swap" />
      <div class="swap-on">🤔</div>
      <div class="swap-off">😓</div>
    </label>
    <!-- Text -->
    <p class="font-semibold">{m.error_404()}</p>
    <a href=`/${languageTag()}` class="btn">
      <Emoji symbol="↩️" label="return arrow" />
      {m.home_button()}
    </a>
  </section>
</Error404Layout>

<style is:inline>
  #404-section {
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    padding: 1.5rem;
  }
</style>
