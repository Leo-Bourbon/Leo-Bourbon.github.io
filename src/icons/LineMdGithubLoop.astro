---
const props = Astro.props;
---

<svg
  class="github-loop"
  xmlns="http://www.w3.org/2000/svg"
  width="2em"
  height="2em"
  viewBox="0 0 24 24"
  {...props}
>
  <mask id="lineMdGithubLoop0" width="24" height="24" x="0" y="0">
    <g fill="#fff">
      <ellipse cx="9.5" cy="9" rx="1.5" ry="1"></ellipse>
      <ellipse cx="14.5" cy="9" rx="1.5" ry="1"></ellipse>
    </g>
  </mask>
  <g
    fill="none"
    stroke="currentColor"
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="2"
  >
    <path
      class="github-loop-body"
      stroke-dasharray="32"
      stroke-dashoffset="32"
      d="M12 4c1.67 0 2.61 0.4 3 0.5c0.53 -0.43 1.94 -1.5 3.5 -1.5c0.34 1 0.29 2.22 0 3c0.75 1 1 2 1 3.5c0 2.19 -0.48 3.58 -1.5 4.5c-1.02 0.92 -2.11 1.37 -3.5 1.5c0.65 0.54 0.5 1.87 0.5 2.5c0 0.73 0 3 0 3M12 4c-1.67 0 -2.61 0.4 -3 0.5c-0.53 -0.43 -1.94 -1.5 -3.5 -1.5c-0.34 1 -0.29 2.22 0 3c-0.75 1 -1 2 -1 3.5c0 2.19 0.48 3.58 1.5 4.5c1.02 0.92 2.11 1.37 3.5 1.5c-0.65 0.54 -0.5 1.87 -0.5 2.5c0 0.73 0 3 0 3"
    >
    </path>
    <path
      class="github-loop-tail"
      stroke-dasharray="10"
      stroke-dashoffset="10"
      d="M9 19c-1.406 0-2.844-.563-3.688-1.188C4.47 17.188 4.22 16.157 3 15.5"
    >
    </path>
  </g>
  <rect
    class="github-loop-eyes"
    width="8"
    height="4"
    x="8"
    y="11"
    fill="currentColor"
    mask="url(#lineMdGithubLoop0)"
  >
  </rect>
</svg>

<style>
  svg.github-loop {
    --github-loop-icon-start-delay: 100ms;
  }

  /* Circle */
  svg.github-loop > g > path.github-loop-body {
    animation: github-loop-body-enter-in 700ms 1 linear forwards;
    animation-delay: calc(
      var(--phone-enter-duration) + var(--github-loop-icon-start-delay)
    );
  }

  @keyframes github-loop-body-enter-in {
    from {
      stroke-dashoffset: 32;
    }

    to {
      stroke-dashoffset: 0;
    }
  }

  /* Tail */
  svg.github-loop > g > path.github-loop-tail {
    animation:
      github-loop-tail-enter-in 200ms 1 linear forwards,
      github-loop-tail-sway 2s infinite linear alternate;
    animation-delay: calc(
        var(--phone-enter-duration) + var(--github-loop-icon-start-delay) +
          800ms
      ),
      calc(
        var(--phone-enter-duration) + var(--github-loop-icon-start-delay) +
          800ms
      );
  }

  @keyframes github-loop-tail-enter-in {
    from {
      stroke-dashoffset: 10;
    }

    to {
      stroke-dashoffset: 0;
    }
  }

  @keyframes github-loop-tail-sway {
    from {
      d: path(
        "M9 19c-1.406 0-2.844-.563-3.688-1.188C4.47 17.188 4.22 16.157 3 15.5"
      );
    }
    to {
      d: path("M9 19c-1.406 0-3-.5-4-.5-.532 0-1 0-2-.5");
    }
  }

  /* Eyes */
  svg.github-loop > rect.github-loop-eyes {
    /* animation: github-loop-eyes-pop-in-out 5s linear infinite; */
    animation-delay: calc(
      var(--phone-enter-duration) + var(--github-loop-icon-start-delay)
    );
  }

  @keyframes github-loop-eyes-pop-in-out {
    from {
      fill-opacity: 1;
      y: 11;
    }
    15% {
      fill-opacity: 0;
      y: 7;
    }
    55% {
      fill-opacity: 0;
      y: 7;
    }
    to {
      fill-opacity: 1;
      y: 11;
    }
  }
</style>
